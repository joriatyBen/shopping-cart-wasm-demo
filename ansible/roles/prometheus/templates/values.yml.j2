grafana:
  enabled: true
  adminPassword: "9R@fa#4"
  name: grafana-users-config
  grafana.ini:
    auth:
      login_cookie_name: grafana_session_plutos
      login_maximum_inactive_lifetime_duration: 1M
      login_maximum_lifetime_duration: 2M
      token_rotation_interval_minutes: 120

  plugins:
    - grafana-piechart-panel
    - grafana-clock-panel

  sidecar:
    dashboards:
      enabled: true
      label: grafana_dashboard
      folder: /tmp/dashboards
      searchNamespace: ALL
      #searchNamespace: default, carts-java
      provider:
        foldersFromFilesStructure: true
    datasources:
      enabled: true
      label: grafana_datasource
      searchNamespace: ALL
    notifiers:
      enabled: true
      label: grafana_notifier
      searchNamespace: ALL